{
  "apiVersion": "batch/v1",
  "kind": "CronJob",
  "metadata": {
    "name": "spike-snn-event-backup",
    "namespace": "production"
  },
  "spec": {
    "schedule": "0 */6 * * *",
    "jobTemplate": {
      "spec": {
        "template": {
          "spec": {
            "containers": [
              {
                "name": "backup",
                "image": "backup-tool:latest",
                "command": [
                  "/bin/sh"
                ],
                "args": [
                  "-c",
                  "backup-script.sh"
                ]
              }
            ],
            "restartPolicy": "OnFailure"
          }
        }
      }
    }
  }
}